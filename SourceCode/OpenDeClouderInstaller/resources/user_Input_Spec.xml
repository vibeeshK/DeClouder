<izpack:userinput version="5.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:izpack="http://izpack.org/schema/userinput" xsi:schemaLocation="http://izpack.org/schema/userinput http://izpack.org/schema/5.0/izpack-userinput-5.0.xsd">
  <panel id="inputpanel">
  
	<field type="staticText" align="left"
	       txt="User Settings..."/>
    <field type="text" variable="DesktopUserName">
      <spec txt="Desktop Login Name: " id="DesktopUserName" size="25" set=""/>
    </field>	       
    <field type="text" variable="ApplicationUserName">
      <spec txt="Application User Name: " id="ApplicationUserName" size="25" set=""/>
    </field>
    <field type="text" variable="ExtendedServerUserName">
      <spec txt="ExtendedServerUser User Name: " id="ExtendedServerUserName" size="25" set=""/>
    </field>
    <field type="text" variable="proxyaddress">
      <spec txt="Proxy Host:" id="input.proxy" size="25" set=""/>
    </field>
    <field type="text" variable="proxyPort">
      <spec txt="Proxy Port:" id="input.port" size="6" set=""/>
    </field>
  </panel>
</izpack:userinput>